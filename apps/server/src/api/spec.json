          "senderCountry": { "type": "string" },
          "clientName": { "type": "string" },
          "clientEmail": { "type": "string" },
          "invoiceDate": { "type": "string" },
          "projectDescription": { "type": "string" },
          "items": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/CreateInvoiceItem" }
          }
        },
        "required": [
          "description",
          "paymentTerms",
          "clientStreetAddress",
          "clientCity",
          "clientPostCode",
          "clientCountry",
