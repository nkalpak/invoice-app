        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "invoices": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Invoice" }
          }
        },
        "required": ["id", "name", "email", "invoices"]
      },
      "Invoice": {
        "type": "object",
